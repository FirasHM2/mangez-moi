            <div class="row">
              <!-- row start from here -->
            <%sandwich.forEach(function(sandwich){ %>
             <%  if (sandwich.type === sandCategory) {  %>
                <div class="col-lg-4 col-md-6 special-grid">
                    <div class="gallery-single fix submit">
                      <img class="img-fluid" src=<%=sandwich.imagePath%> alt="Image">
                      <div class="why-text">
                        <h4 class="sandTitle"><%=sandwich.title%></h4>
                        <p><%=sandwich.description%></p>
                        <h5><%=sandwich.price%></h5>
                        <input type="hidden" name="sandwichId" value=<%=sandwich._id%>>
                        <input type="hidden" name="sandwichName" value=<%=sandwich.title%>>
                      </div>
                    </div>
                </div>
              <% } %>
              <% }) %>
            </div>
