<div class="menu-box" id="menu">
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <div class="heading-title text-center">
          <h2>Menu</h2>
          <p>Lorem Ipsum is simply dummy text of the printing and typesetting</p>
        </div>
      </div>
    </div>
    <div class="row inner-menu-box">
      <div class="col-3">
        <div class="nav flex-column nav-pills" id="v-pills-tab" role="tablist" aria-orientation="vertical">
          <% data.forEach((catData) => { %>
          <a class="nav-link" id="v-pills-<%= catData.id %>-tab" data-toggle="pill"
            href="#v-pills-<%= catData.id %>" role="tab" aria-controls="v-pills-<%= catData.id %>" aria-selected="true"><%= catData.name %></a>
          <% }) %>
        </div>
        <form id="categorieRequest" action="/sandwich" method="post">
          <input id="categorieRequestInput" type="hidden" name="categieDeSandwich" value="">
        </form>
      </div>
      <div class="col-9">
        <div class="tab-content" id="v-pills-tabContent">
          <% data.forEach((catData) => { %>
          <div class="tab-pane fade show" id="v-pills-<%= catData.id %>" role="tabpanel" aria-labelledby="v-pills-<%= catData.id %>-tab" data-id='<%=catData.id%>'>
            <div class="row">
              <!-- row start from here -->
              <% catData.products.forEach((product) => { %>
              <div class="col-lg-4 col-md-6 special-grid">
                <div class="gallery-single fix submit" data-id='<%=product.id%>'>
                  <img class="img-fluid" src='<%=product.image%>' alt="Image">
                  <div class="why-text">
                    <h4 class="sandTitle"><%=product.name%></h4>
                    <p><%=product.description%></p>
                    <h5><%=product.price%></h5>
                  </div>
                </div>
              </div>
              <% }) %>
            </div>
          </div>
          <% }) %>
          <!-- row ends here -->
        </div>
      </div>
    </div>
  </div>
</div>
<!-- End Menu -->